<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_contact_avatar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/offset9"
        android:layout_marginTop="@dimen/offset22"
        android:background="@drawable/bg_contact_avatar"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:minWidth="48dp"
        android:textAllCaps="true"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/text16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BR" />

    <TextView
        android:id="@+id/text_contact_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset2"
        android:layout_marginBottom="@dimen/offset16"
        android:fontFamily="@font/opensans"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@color/contacts_subtitle_text_color"
        android:textSize="@dimen/text12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/text_contact_avatar"
        app:layout_constraintStart_toStartOf="@id/text_contact_avatar"
        app:layout_constraintTop_toBottomOf="@id/text_contact_avatar"
        tools:text="Alberto" />

    <ImageView
        android:id="@+id/image_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/text_contact_avatar"
        app:layout_constraintTop_toTopOf="@id/text_contact_avatar"
        app:srcCompat="@drawable/ic_contact_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>