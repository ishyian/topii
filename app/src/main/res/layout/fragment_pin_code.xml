<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.pin_code.presentation.PinCodeFragment">

    <com.topiichat.app.core.presentation.customview.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text="@string/title_otp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/subtitle_confirm_pin"
        android:textColor="@color/titleColor"
        android:fontFamily="@font/sfprodisplaymedium"
        android:textSize="16sp"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_pin_code"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="textStart"
        android:background="@drawable/rounded_border_edittext"
        android:inputType="textPassword"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="26dp"
        android:paddingHorizontal="26dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_show_pass"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_password_not"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/edit_text_pin_code"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_pin_code"
        app:layout_constraintEnd_toEndOf="@id/edit_text_pin_code" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/text_pin_padding"
        android:gravity="start"
        android:text="@string/subtitle_pin"
        android:textColor="@color/titleColor"
        android:fontFamily="@font/sfprodisplaymedium"
        android:textSize="16sp"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_pin_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/next_after_pin_code"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_button"
        android:text="@string/siguiente_button"
        android:fontFamily="@font/sfprodisplaybold"
        android:textColor="@color/whiteColor"
        android:background="@drawable/bg_button"
        android:layout_marginHorizontal="76dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>