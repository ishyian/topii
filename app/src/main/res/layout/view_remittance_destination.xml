<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/offset24"
    android:layout_marginTop="@dimen/offset16"
    android:background="@drawable/bg_home_total_sum"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/offset20"
    android:paddingVertical="@dimen/offset20"
    app:layout_constraintTop_toBottomOf="@id/text_amount">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/offset40"
        android:layout_height="@dimen/offset40" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset12"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaymedium"
            android:textAlignment="center"
            android:textColor="@color/remittance_detail_primary_text_color"
            android:textSize="@dimen/text18"
            tools:text="Carlos Santaella" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_recipient_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/offset6"
            android:fontFamily="@font/sfprodisplaymedium"
            android:textColor="@color/remittance_detail_primary_text_color"
            android:textSize="@dimen/text14"
            tools:text="EspaÃ±a" />
    </LinearLayout>

</LinearLayout>
