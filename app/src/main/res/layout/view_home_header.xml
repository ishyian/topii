<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    tools:ignore="ContentDescription"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:id="@+id/layout_send_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_home_header_item"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_send_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_send" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_send_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/sfprodisplayregular"
            android:lines="2"
            android:text="@string/home_send_payment_text"
            android:textAlignment="center"
            android:textColor="@color/home_header_item_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_request_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_home_header_item"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_request_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_request"
            app:tint="@color/home_header_item_icon_disabled_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_request_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/sfprodisplayregular"
            android:lines="2"
            android:text="@string/home_request_payment_text"
            android:textAlignment="center"
            android:textColor="@color/home_header_item_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wallet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_home_header_item"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_wallet"
            app:tint="@color/home_header_item_icon_disabled_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/sfprodisplayregular"
            android:lines="2"
            android:text="@string/home_wallet_text"
            android:textAlignment="center"
            android:textColor="@color/home_header_item_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_home_header_item"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_chat"
            app:tint="@color/home_header_item_icon_disabled_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/sfprodisplayregular"
            android:lines="2"
            android:text="@string/home_chat_text"
            android:textAlignment="center"
            android:textColor="@color/home_header_item_text" />
    </LinearLayout>
</merge>