<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.topiichat.app.features.splash.presentation.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_terms"
            app:destination="@id/termsFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splash_to_send_payment"
            app:destination="@id/sendPaymentFragment"
            app:popUpTo="@id/sendPaymentFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/termsFragment"
        android:name="com.topiichat.app.features.terms.presentation.TermsFragment"
        android:label="fragment_terms"
        tools:layout="@layout/fragment_terms">

        <action
            android:id="@+id/action_terms_to_permission"
            app:destination="@id/permissionFragment" />

    </fragment>
    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.topiichat.app.features.activate_permission.presentation.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission">

        <action
            android:id="@+id/action_permission_to_validPhoneNumber"
            app:destination="@id/validPhoneNumberFragment" />

    </fragment>

    <fragment
        android:id="@+id/pinCodeFragment"
        android:name="com.topiichat.app.features.pin_code.presentation.PinCodeFragment"
        android:label="fragment_pin_code"
        tools:layout="@layout/fragment_pin_code">

        <action
            android:id="@+id/action_pinCode_to_terms"
            app:destination="@id/termsFragment"
            app:popUpTo="@id/pinCodeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_pinCode_to_register"
            app:destination="@id/registerFragment" />

    </fragment>
    <fragment
        android:id="@+id/validPhoneNumberFragment"
        android:name="com.topiichat.app.features.valid_phone_number.presentation.ValidPhoneNumberFragment"
        android:label="fragment_valid_phone_number"
        tools:layout="@layout/fragment_valid_phone_number">

        <action
            android:id="@+id/action_validPhoneNumber_to_otp"
            app:destination="@id/otpFragment" />

        <action
            android:id="@+id/action_validPhoneNumber_to_terms"
            app:destination="@id/termsFragment"
            app:popUpTo="@id/validPhoneNumberFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/otpFragment"
        android:name="com.topiichat.app.features.otp.presentation.OtpFragment"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp">

        <action
            android:id="@+id/action_otp_to_pinCode"
            app:destination="@id/pinCodeFragment" />

        <action
            android:id="@+id/action_otp_to_terms"
            app:destination="@id/termsFragment"
            app:popUpTo="@id/otpFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.topiichat.app.features.chats.presentation.ChatsFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chats" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.topiichat.app.features.registration.presentation.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_chats"
            app:destination="@id/chatsFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.topiichat.app.features.home.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/sendPaymentFragment"
        android:name="com.topiichat.app.features.send_payment.presentation.SendPaymentFragment"
        android:label="fragment_send_payment"
        tools:layout="@layout/fragment_send_payment" />
</navigation>